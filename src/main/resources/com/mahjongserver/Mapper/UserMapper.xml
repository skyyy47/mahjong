<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mahjongserver.Mapper.UserMapper">
    <select id="selectUserById" parameterType="int" resultType="com.mahjongserver.Entity.User">
        SELECT user_id, user_name, password FROM user_info WHERE user_id = #{user_id}
    </select>

    <insert id="insertUser" parameterType="com.mahjongserver.Entity.User">
        INSERT INTO user_info (user_name, password) VALUES (#{user_name}, #{password})
        <selectKey keyProperty="user_id" resultType="int" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>
</mapper>